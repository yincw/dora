{
  "name": "@yincw/dora",
  "version": "0.0.3",
  "description": "A library of JavaScript tools",
  "private": true,
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "browser": "dist/index.umd.min.js",
  "typings": "dist/dora.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "LICENSE",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "api": "api-extractor run",
    "doc": "api-documenter markdown --input-folder temp --output-folder docs",
    "doc:release": "npm run build && npm run api && npm run doc && npm run clean:d",
    "commit": "cz",
    "release": "standard-version",
    "prepublishOnly": "npm run doc:release && npm run commit && npm run release && npm run clean:d",
    "test": "jest --verbose -u",
    "test:coverage": "jest --coverage",
    "e2e": "cypress open",
    "prettier": "prettier --write --ignore-unknown",
    "lint": "eslint 'src/**/*.{ts,js}'",
    "clean": "rimraf dist/* && npm run clean:doc",
    "clean:src": "rimraf src/* && rimraf tests/*",
    "clean:doc": "rimraf docs/* && rimraf temp/*",
    "clean:d": "rimraf dist/string && rimraf dist/date && rimraf dist/number && rimraf dist/math && rimraf dist/object && rimraf dist/array && rimraf dist/function && rimraf dist/rule && rimraf dist/lang && rimraf dist/helper",
    "gen": "node scripts/generator.js --mode=gen",
    "del": "node scripts/generator.js --mode=del"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged & jest",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*./src/**/*.{ts,js,json,less,md}": [
      "npm run prettier",
      "npm run lint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@microsoft/api-documenter": "^7.8.48",
    "@microsoft/api-extractor": "^7.9.13",
    "@rollup/plugin-babel": "^5.2.0",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@types/jest": "^26.0.10",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "lint-staged": "^10.2.13",
    "prettier": "2.1.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.6",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.27.2",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.7"
  },
  "keywords": [
    "Dora",
    "TypeScript",
    "Babel",
    "Rollup",
    "Tools",
    "Utils"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yincw/dora.git"
  },
  "author": "yincw",
  "license": "MIT"
}
