{
  "name": "@yincw/dora",
  "version": "1.1.3",
  "description": "A library of JavaScript tools",
  "private": true,
  "main": "lib/index.js",
  "module": "es/index.js",
  "browser": "dist/index.min.js",
  "sideEffects": false,
  "files": [
    "lib",
    "es",
    "dist",
    "LICENSE",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "build:es": "tsc --target ES2015 --module ES2015 --rootDir src --outDir es",
    "build:lib": "tsc --target ES5 --module CommonJS --rootDir src --outDir lib",
    "build": "rollup -c",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "e2e": "cypress open",
    "clean": "rimraf lib/* && rimraf es/* && rimraf dist/*",
    "clean:test": "rimraf src/* && rimraf tests/*",
    "prettier": "prettier --write",
    "lint": "eslint 'src/**/*.{ts,js}'",
    "commit": "cz",
    "release": "standard-version",
    "api": "api-extractor run",
    "prepublishOnly": "npm run commit && npm run release",
    "gen": "node scripts/generator.js --mode=gen",
    "del": "node scripts/generator.js --mode=del"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged & jest",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*./src/**/*.{ts,js,json,less,md}": [
      "prettier --write --ignore-unknown",
      "npm run lint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@rollup/plugin-typescript": "^5.0.2",
    "@types/jest": "^26.0.10",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "lint-staged": "^10.2.13",
    "prettier": "2.1.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.6",
    "rollup-plugin-uglify": "^6.0.4",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.2.0",
    "typescript": "^3.9.7",
    "uglify-es": "^3.3.9"
  },
  "keywords": [
    "TypeScript",
    "Jest",
    "tools",
    "utils"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yincw/dora.git"
  },
  "author": "yincw",
  "license": "MIT"
}
